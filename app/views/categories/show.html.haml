= link_to 'Edit links', '#', class: 'btn btn-warning', id: 'edit-links', style: 'float:right'
= link_to 'Add new link', new_link_path(category: @category.id), role: 'button', style: 'float: right; margin-right: 0.5em', class: 'btn btn-primary'
%br/
%h1
  = @category.name
  .links
    .row.centered
      .col-md-12
        - if @links.empty? == false
          .links-box
            -@links.each do |link|
              = render :partial => 'layouts/link', locals: {link: link}
          = will_paginate @links, renderer: BootstrapPagination::Rails
        - else
          .alert.alert-warning Not found

  .links-edit
    .row.centered
      .col-md-12
        - if @links.empty? == false
          .links-box
            -@links.each do |link|
              .link
                .col-md-9{style: 'padding-bottom: 32px'}
                  = link.title
                .col-md-1
                  = link_to 'Edit', edit_link_path(link), class: 'btn btn-info'
                .col-md-2
                  = link_to 'Remove', link, method: 'delete', class: 'btn btn-danger', :confirm => "Are you sure"

          = will_paginate @links, renderer: BootstrapPagination::Rails
                  
        - else
          .alert.alert-warning Not found